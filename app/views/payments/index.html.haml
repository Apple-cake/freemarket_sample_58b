%header
  = render 'module/header.html.haml'
- breadcrumb :credit

.mypage
  %main.mypage__box
    .maypage-sidebar
      = render 'module/mypage-sidebar'
    .credit-box
      .credit-box-in
        .credit-box-in__top
          %h2 支払い方法
        .credit-box-in__main
          %section.credit-box-in__main__info
            .credit-info
              %h3 クレジットカード一覧
            .customer-card__box
              .customer-card__box__content
                %figure.form_space
                = image_tag "Visa_logo.svg", size: "50x30"
              .customer-card__box__content--number.form_space
                %h3
                  = "************" + @customer_card.last4
              .customer-card__box__content--expired.form_space
                - exp_month = "0#{@customer_card.exp_month.to_s}"
                - exp_year = @customer_card.exp_year.to_s.slice(2,3)
                %h3
                  = exp_month + " / " + exp_year
              = link_to payment_path(@payment.id), method: :delete, class:"customer-card__content--btn" do
                %button.card_destroy_btn
                  削除する
          .pay_link
            = link_to("#", class: 'right-text-link pay-text_link') do
              支払い方法について
              %i.fa.fa-chevron-right

= render 'module/footer'
= render 'module/sell-btn'
