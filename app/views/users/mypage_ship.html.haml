%header
  = render 'module/header.html.haml'

- breadcrumb :ship
.mypage
  %main.mypage__box
    .maypage-sidebar
      = render 'module/mypage-sidebar'
    .mypage__box__content
      %section.mypage-contaier
        %h2.mypage-contaier__tab-head
          出品した商品
        %ul.mypage-contaier__tabs
          %li.mypage-contaier__tabs__trading
            = link_to ("#") do
              %h3
                取引中
          %li.mypage-contaier__tabs__past-transactions
            = link_to ("#") do
              %h3
                過去の取引
          %li.mypage-contaier__tabs__past-transactions
            = link_to ("#") do
              %h3
                売却済

        .mypage-item-list
          - @item.each do |item|
            = link_to edit_delete_items_path(item), class: "mypage-item-link" do
              - if item.images.attached?
                - item.images.each do |image|
                  = image_tag image ,size: "64x55" ,class: "is-higher-width"
                  .mypage-item-body
                    .mypage-item-text
                      = item.name
                      .mypage-item-status.awaiting
                        出品中


