%header
  = render 'module/subheader.html.haml'
.item-edit-main
  = form_with(model: @item, url: items_path, local: true) do |f|
    %section.item-edit-container
      .item-edit-container
        .sell-container-inner
          %h2.l-single-head
            商品の情報を入力
          .sell-form
            .sell-upload-box
              %h3.sell-upload-head
                出品画像
                %span.form-require
                  必須
              %p
                最大10枚までアップロードできます
              .sell-dropbox-container.clearfix
                .sell-upload-items-container
                  .sell-upload-items
                    %ul
              .sell-upload-drop-box
                %label
                  = f.file_field :images, multiple: true, class: "image_file_select"
                  %pre.visible-pc
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード
              %pseudo:after
              %pseudo:after
            .sell-content
              .form-group
                %label
                  商品名
                  %span.form-require
                    必須
                .item_subumit_form
                  = f.text_field :name, placeholder: "商品名（必須 40文字まで)", value: "", class: 'input-default_shipping'
              .form-group
                %label
                  商品の説明
                  %span.form-require
                    必須
                = f.text_area :description, placeholder: "商品の説明（必須 1,000文字以内）", value: "", class: 'textarea-default'

            .sell-content_secoud
              %h3.sell-sub-head
                商品の詳細
              .sell-form-box
                .form-group_first
                  %label
                    カテゴリー
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :category_id, Categoryhash.all, :id, :name

                .form-group
                  %label
                    サイズ
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :size_id, Size.all, :id, :name

                .form-group
                  %label
                    商品の状態
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :condition_id, Condition.all, :id, :name

            .sell-content_secoud
              %h3.sell-sub-head
                配送について
                %i.fa.fa-question-circle
              .sell-form-box
                .form-group_first
                  %label
                    配送料金の負担
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :shipfee_id, Shipfee.all, :id, :name

                .form-group
                  %label
                    配送の方法
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :shipmethod_id, Shipmethod.all, :id, :name

                .form-group
                  %label
                    発送元の地域
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :prefecture_id, Prefecture.all, :id, :name

                .form-group
                  %label
                    発送までの日数
                  %span.form-require 必須
                  .select-wrap-box
                    %i.fa.fa-angle-down
                      %pseudo:before
                    .select-wrap-box_prefecture
                      .select-wrap
                        = f.collection_select :shipdate_id, Shipdate.all, :id, :name

            .sell-content_secoud_under
              %h3.sell-sub-head_under
                販売価格(300〜9,999,999)
                %i.fa.fa-question-circle
              %a.form-question{:href => "/jp/help_center/article/64/", :target => "_blank"}
              .sell-form-box_under
                %ul.sell-price
                  %li.form-group_under_first
                    .form-group_price_box
                      %label.l-left
                        価格
                        %span.form-require
                          必須
                      .l-right.sell-price-input
                        ¥
                        .input-default_box
                          = f.text_field :price, placeholder: "例）300", value: "", class: 'input-default_price',  type:"tel"

              .sell-form-box_under_second
                %p
                  販売手数料 (10%)
              .sell-form-box_under_third
                %p
                  販売利益
      .btn-container
        .btn-container_text
        = f.submit '編集する', class: 'btn-default btn-red' do
          編集する
        %a.btn-default.btn-gray
          キャンセル
%footer
  = render 'module/subfooter.html.haml'