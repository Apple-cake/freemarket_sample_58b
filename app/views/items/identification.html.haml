          .form-block
            %label{for: "city"} 市区町村
            %span.arbitrary-mark
              任意
            %input.input-identification-form{name: "city", placeholder: "例) 横浜市緑区", type: "text", value: ""}
          .form-block
            %label{for: "block"} 番地
            %span.arbitrary-mark
              任意
            %input.input-identification-form{name: "block", placeholder: "例) 青山1−1−1", type: "text", value: ""}
          .form-block
            %label{for: "building"} 建物名
            %span.arbitrary-mark
              任意
            %input.input-identification-form{name: "building", placeholder: "例) 柳ビル103", type: "text", value: ""}
            = button_to "登録する",{controller: 'items', action: 'mypage'}, {method: :get, class: "input-identification-registration_btn"}
