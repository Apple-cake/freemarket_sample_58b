.header
  .header__container
    .header__container__top
      %h1
        = link_to("/") do
          = image_tag "logo.svg", size: "134x36", alt: "mercari",class: "logo"
      .header__form
        = form_with(model: @item, local: true) do |f|
          %input.header__input-default{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
          %i.fa.fa-search.icon-search

    .header__container__bottom.clearfix
      .container__bottom-left
        %ul.header-nav
          %li
            %h2
              = link_to('#', class:'search-method') do
                %i.fa.fa-list-ul
                %span カテゴリーから探す
          %li
            %h2
              = link_to('#', class:'search-method') do
                %i.fa.fa-tag.icon
                %span ブランドから探す
      .container__bottom-right
        %ul.header-user-nav
          - if user_signed_in?
            %li
              = link_to('#', class: 'link') do
                %i.icon.fa.fa-heart-o
                %span いいね!一覧
            %li
              = link_to('#', class: 'link') do
                %i.icon.fa.fa-bell-o
                  .nav-count 4
                %span お知らせ
              %ul
                %li
                  = link_to user_path(current_user.id),class: "sublink" do
                    .sublink-content-logo
                      =image_tag "mercari_profile.png", size: "40x40", alt: "mercari"
                    .sublink-content-text
                      %span 3日後、P999還元お得チケットの有効期限が切れます！タップして詳細を確認しましょう。
                      %i.fa.fa-chevron-right
                %li
                  = link_to user_path(current_user.id),class: "sublink" do
                    .sublink-content-logo
                      =image_tag "mercari_profile.png", size: "40x40", alt: "mercari"
                    .sublink-content-text
                      %span 【あと2日】参加ボタンを押すだけでポイントがもらえる！総額1億円相当還元！詳しくはこちら
                      %i.fa.fa-chevron-right
                %li
                  = link_to user_path(current_user.id),class: "sublink" do
                    .sublink-content-logo
                      =image_tag "mercari_profile.png", size: "40x40", alt: "mercari"
                    .sublink-content-text
                      %span 事務局から個別メッセージ「ログイン通知」
                      %i.fa.fa-chevron-right
                %li
                  = link_to user_path(current_user.id),class: "sublink" do
                    .sublink-content-logo
                      =image_tag "mercari_profile.png", size: "40x40", alt: "mercari"
                    .sublink-content-text
                      %span 《ご登録記念》¥1,000の商品を「実質1円」でご購入いただけます！
                      %i.fa.fa-chevron-right
                %li
                  = link_to user_path(current_user.id),class: "sublink" do
                    .sublink-content-logo
                      =image_tag "mercari_profile.png", size: "40x40", alt: "mercari"
                    .sublink-content-text
                      %span 【スマホを売ろう！】メルカリなら下取りよりも高く売れる♪いますぐ相場チェック！
                      %i.fa.fa-chevron-right
            %li
              = link_to('#', class: 'link') do
                %i.icon.fa.fa-check
                %span やることリスト
            %li.list-mypage
              = link_to user_path(current_user.id) do
                = image_tag current_user.image ,size: "32x32", alt: "", class: "member_photo"
                %span マイページ
          - else
            .new-registration-btn
              = link_to '新規会員登録', new_user_path
            .log-in-btn
              = link_to 'ログイン', new_user_session_path


