.header-address_input
  = render 'devise/shared/user-sign_up-header'

%main.single-main
  .l-single-container
    %h2.l-chapter-head.registration 住所入力
    = form_with(model: @user ,url: step4_signup_index_path, local: true, class: "l-single-inner registration-form") do |f|
      .l-single-content
        .form-group2
          .form-block
            = f.label :family_name, "お名前"
            %span.arbitrary-mark-red
              必須
            = f.text_field :family_name, placeholder: "例)山田", type: "text", value: "", class: "input-identification-form"
            = f.text_field :last_name, placeholder: "例)彩", type: "text", value: "", class: "input-identification-form"
          .form-block
            %label
            = f.label :family_name, "お名前カナ"
            %span.arbitrary-mark-red
              必須
            = f.text_field :family_kana, placeholder: "例)ヤマダ", type: "text", value: "", class: "input-identification-form"
            = f.text_field :last_kana, placeholder: "例)アヤ", type: "text", value: "", class: "input-identification-form"
          .form-block
            = f.label :zip_code, "郵便番号"
            %span.arbitrary-mark-red
              必須
            = f.text_field :zip_code, placeholder: "例)1234567", type: "text", value: "", class: "input-identification-form"
          .form-block
            = f.label :prefecture_id, "都道府県"
            %span.arbitrary-mark-red
              必須
            .select-box
              %i.fa.fa-chevron-down
              .select-box__prefecture
                = f.collection_select :prefecture_id, Prefecture.all, :id, :name
          .form-block
            = f.label :city, "市区町村"
            %span.arbitrary-mark-red
              必須
            = f.text_field :city, placeholder: "例) 横浜市緑区", type: "text", value: "", class: "input-identification-form"
          .form-block
            = f.label :block, "番地"
            %span.arbitrary-mark-red
              必須
            = f.text_field :block, placeholder: "例) 青山1−1−1", type: "text", value: "", class: "input-identification-form"
          .form-block
            = f.label :building, "建物名"
            %span.arbitrary-mark-gray
              任意
            = f.text_field :building, placeholder: "例) 柳ビル103", type: "text", value: "", class: "input-identification-form"
          .form-block
            = f.label :phone_number, "電話"
            %span.arbitrary-mark-gray
              任意
            = f.text_field :phone_number, placeholder: "例) 09012345678", type: "text", value: "", class: "input-identification-form"
            = link_to("登録する", credit_users_path, class: "input-identification-registration_btn")

= render 'module/subfooter'